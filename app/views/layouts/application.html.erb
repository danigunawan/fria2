<!DOCTYPE html>
<html>
  <head>
    <title>UP FRIA</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="ui grid container">
      <%= render 'shared/nav'%>
      <div class="container" style = "margin-top:128px">
        <div class="row">
          <% if flash[:notice] %>
            <div class="ui positive message"><%= notice %></div>
          <% end %>
          <% if flash[:alert] %>
            <div class="ui error message"><%= alert %></div>
          <% end %>
        </div>
        <%= yield %>
        <%= render 'shared/footer'%>
      </div>
    </div>
  </body>
</html>
