<h1>Edit Proposal</h1>

<%= form_for @proposal, html: { multipart: true, class: "ui form" } do |f| %>
<div class="ui padded segment">
  <div class="required field">
    <label>Title</label>
    <%= f.text_field :title , autofocus: true, required: true %>
  </div>
  <div class="required field">
    <label>Objectives</label>
    <%= f.text_area :objectives, required: true %>
  </div>
  <div class="required field">
    <label>Description</label>
    <%= f.text_area :descriptions, required: true %>
  </div>
  <label>File Information</label>
  <br> (to be added)
  <div class="field">
    <label>Change File (optional)</label>
    <%= f.file_field :avatar, accept: '.pdf', required: false %>
  </div>
</div>
  <%= f.submit "Save", :class => "ui primary button" %>
  <%= link_to 'Cancel', proposals_path, :class => "ui primary button" %>
<% end %>
