<h1>New Proposal</h1>
<form class="ui form">
  <%= form_for @proposal, html: { multipart: true } do |f| %>
    <div class="field">
      <label>*Title</label>
      <%= f.text_field :title , autofocus: true, required: true %>
    </div>
    <div class="field">
      <label>*Objectives</label>
      <%= f.text_area :objectives, required: true %>
    </div>
    <div class="field">
      <label>*Description</label>
      <%= f.text_area :descriptions, required: true %>
    </div>
    <div class="field">
      <label>Coresearchers</label>
      <%= f.text_field :coresearchers %>
    </div>
    <div class="field">
      <label>*File</label>
      <%= f.file_field :avatar, accept: '.pdf', required: true %>
    </div>
    <%= f.submit "Save", :class => "ui primary button" %>
    <%= link_to 'Back', proposals_path, :class => "ui primary button" %>
  <% end %>
</form>
