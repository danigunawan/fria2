<h1>Log In</h1>

<%= form_for(resource, as: resource_name, :html => {:class => "ui form"}, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class = "ui padded segment">
    <div class="required field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, required: true %>
    </div>
    <div class="required field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", required: true %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="ui checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  </div>
  <%= f.submit "Log in", :class => "ui primary button" %>
<% end %>

<%= render "devise/shared/links" %>
